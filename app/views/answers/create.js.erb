<% if @answer.errors.present? %>
<% @answer.errors.full_messages.each do |msg| %>
$('.errors').append('<%= j msg %>!')
$('.errors').css('color', 'red')
<% end %>
<% else %>
$('.new-answer-body').val('')
$('.file').val('')
document.getElementsByClassName('answers')[0].innerHTML += `<%= render partial: 'questions/answer',
 locals: { answer: @answer, question: @answer.question } %>`;
<% end %>